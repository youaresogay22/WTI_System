sudo ifconfig wlan0 down
sudo iwconfig wlan0 mode monitor
sudo ifconfig wlan0 up

sudo mkdir /home/user/Desktop/git/WTI_System_Project/pcapng_folder
sudo mkdir /home/user/Desktop/git/WTI_System_Project/csv
sudo chmod 777 /home/user/Desktop/git/WTI_System_Project/csv

sudo tshark -i wlan0 -w /home/user/Desktop/git/WTI_System_Project/pcapng_folder/data.pcapng -f 'wlan type mgt and (subtype probe-req)' -a duration:1800

sudo tshark -r /home/user/Desktop/git/WTI_System_Project/pcapng_folder/data.pcapng -Y "wlan.fc.type_subtype==0x0004" -T fields -e wlan.sa -e frame.time_relative -e wlan.seq -e wlan.ssid -e frame.len -E separator=, -E quote=n -E header=y > /home/user/Desktop/git/WTI_System_Project/csv/probe.csv

sudo python3 /home/user/Desktop/git/WTI_System_Project/source/main.py
